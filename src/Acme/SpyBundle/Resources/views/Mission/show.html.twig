{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Mission</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Runtime</th>
                <td>{{ entity.runtime }}</td>
            </tr>
            <tr>
                <th>Needbuy</th>
                <td>{{ entity.needBuy }}</td>
            </tr>
            <tr>
                <th>Costs</th>
                <td>{{ entity.costs }}</td>
            </tr>
            <tr>
                <th>Icons</th>
                <td>{{ entity.icons }}</td>
            </tr>
            <tr>
                <th>Form</th>
                <td>{{ entity.form }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('mission') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('mission_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('mission_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
